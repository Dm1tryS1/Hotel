<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            
            <div class="col-lg">
                <div class="info-box">
                    <h1><%=t('.signin')%></h1><br>
                    <%= form_tag url_for(controller: :session, action: :create), method: 'post' do %>
                        <%= label_tag t('.email') %> <br>
                        <%= text_field_tag :email %><br/><br/>                    
                        <%= label_tag t('.password') %> <br>
                        <%= password_field_tag :password %><br/><br/>
                        <%= submit_tag t('.signin') %><br>                   
                    <% end %><br>   

                    <p><%= flash[:error] %></p>
                    <%= button_to t('.back'), root_path, method: :get %><br>  
                    <%= button_to t('.signup'), new_user_path, method: :get%>  
                </div>
            </div>
            
            <div class="col-lg-2"></div>
        </div>
    </div>
</section>