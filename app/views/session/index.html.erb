<!-- Header Section Begin -->
    <header class="header-section">
        <div class="container-fluid">
            <div class="inner-header">
                <div class="logo">
                    <%= link_to image_tag("/img/logo.png"), root_path%>
                </div>
                <div class="nav-right">
                    <%= link_to t('.makeapplication'), new_proposal_path,  class: "primary-btn"%>
                    <%= link_to t('.admin'), session_acc_path, class: "primary-btn"%>
                    <%= link_to t('.applications'), proposals_path, class: "primary-btn"%>
                </div>
                <nav class="main-menu mobile-menu">
                    <ul>
                        <li class="active"><%= link_to t('.home'), session_index_path%></a></li>
                        <li><%= link_to t('.about'), session_aboutus_path%></li>
                        <li><%= link_to t('.rooms'), session_rooms_path%></li>
                        <li><%= link_to t('.contact'), session_contact_path%></li>
                    </ul>
                </nav>
                <div id="mobile-menu-wrap"></div>
            </div>
        </div>
    </header>
<!-- Header End -->

<!-- Hero Area Section Begin -->
    <section class="hero-area set-bg" data-setbg="/img/hero-bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="hero-text">
                        <h1><%= t '.maintext1'%></h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="intro-section spad">
        <div class="container">
            <div class="row intro-text">
                <div class="col-lg-6">
                    <div class="intro-left">
                        <div class="section-title">
                            <span><%= t '.maintext2' %></span>
                            <h2><%= t '.maintext3' %><br /> <%= t '.maintext4' %></h2>
                        </div>
                        <p><%= t '.info1' %></p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="intro-right">
                        <p><%=t '.info2' %></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
<!-- Intro Text Section End -->

<!-- Facilities Section Begin -->
    <section class="facilities-section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div class="facilities-item set-bg" data-setbg="/img/faci-1.jpg">
                        <div class="fi-title">
                            <h2><%= t '.room1'%></h2>
                            <p><%= t '.room2'%></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="facilities-item set-bg fi-right" data-setbg="/img/faci-2.jpg">
                        <div class="fi-title">
                            <h2><%= t '.room3'%></h2>
                            <p><%= t '.room4'%></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
<!-- Facilities Section End -->