<!-- Header Section Begin -->
    <header class="header-section">
        <div class="container-fluid">
            <div class="inner-header">

                <div class="logo">
                    <%= link_to image_tag("/img/logo.png"), root_path%>
                </div>

                <div class="nav-right">
                    <%= link_to t('.makeapplication'), new_proposal_path,  class: "primary-btn"%>
                    <%= link_to t('.admin'), session_acc_path, class: "primary-btn"%>
                    <%= link_to t('.applications'), proposals_path, class: "primary-btn"%>
                </div>

                <nav class="main-menu mobile-menu">
                    <ul>
                        <li><%= link_to t('.home'), session_index_path%></a></li>
                        <li class="active"><%= link_to t('.about'), session_aboutus_path%></li>
