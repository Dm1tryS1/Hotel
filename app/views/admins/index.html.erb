<section class="contact-section spad">
  <div class="container">
    <div class="row">

      <div class="col-lg-1"></div>

      <div class="col-lg-10">
        <div class="info-box">

            <h1><%= t('.admins')%></h1></br>

            <table border='1px',  align="center">
              <thead>
                <tr>
                  <th><%= t('.name')%></th>
                  <th><%= t('.password')%></th>
                  <th><%= t('.key')%></th>
                  <th colspan="2"></th>
                </tr>
              </thead>

              <tbody>
                <% @admins.each do |admin| %>
                  <tr>
                    <td><%= admin.name %></td>
                    <td>*****</td>
                    <td>*****</td>
                    <td><%= button_to t('.edit'), edit_admin_path(admin), method: :get %></td>
                    <td><%= button_to t('.destroy'), admin, method: :delete, data: { confirm: t('.sure') }, method: :get %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            <%= button_to t('.back'), session_admin_path, method: :get %>
        </div>
      </div>
          
      <div class="col-lg-1"></div>
      
    </div>
  </div>
</section>
