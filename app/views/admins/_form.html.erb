<%= form_with(model: admin, local: true) do |form| %></br>

  <div class="field">
    <%= form.label :name %></br>
    <%= form.text_field :name %></br>
  </div></br>

  <div class="field">
    <%= form.label :password %></br>
    <%= form.password_field :password %></br>
  </div></br>

  <div class="field">
    <%= form.label :password_confirmation %></br>
    <%= form.password_field :password_confirmation %></br>
  </div></br>

  <div class="field">
    <%= form.label :key %></br>
    <%= form.password_field :key %></br>
  </div></br>

  <div class="actions">
    <% if current_admin%>
      <%= form.submit t('global.forms.edit')%>
    <% else %>
      <%= form.submit t('global.forms.reg')%>
    <% end %>
  </div>
<% end %>
